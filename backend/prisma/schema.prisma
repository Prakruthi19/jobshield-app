generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  JOBSEEKER
  EMPLOYER
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  firebaseUid String   @unique
  email     String   @unique
  firstName String
  lastName  String
  phone     String
  role      Role     @default(EMPLOYER)
  
  @@map("users")
}